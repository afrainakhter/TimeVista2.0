@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Employee Attendance Management System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/style.css" />

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/font-awesome.min.css">
    <script src="https://kit.fontawesome.com/8ee0e83968.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap-datetimepicker.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/style2.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/select2.min.css">

    <style>
        body {
            background-color: #bec6d8;
        }

        .sidebar-inner {
            background-color: #040216; /* Changed sidebar background color to light ash */
            border-right: 1px solid #ccc; /* Added border to separate sidebar from content */
        }

            .sidebar-inner .sidebar-menu .activee {
                background-color: #040216; /* Background color for sidebar menu items */
            }

                .sidebar-inner .sidebar-menu .activee:hover {
                    background-color: #ddd; /* Hover color for sidebar menu items */
                }

            .sidebar-inner .sidebar-menu .nav-link {
                color: white; /* Text color for sidebar menu items */
            }

                .sidebar-inner .sidebar-menu .nav-link:hover {
                    color: black; /* Text color on hover for sidebar menu items */
                }

        .main-wrapper,
        .header {
            background-color: #040216;
            color: white; /* Text color for header */
        }

        .header {
            position: relative;
            z-index: 1000;
            display: flex;
            align-items: center;
            padding: 0 20px;
            justify-content: space-between;
        }

            .header .logo {
                display: flex;
                align-items: center;
                text-decoration: none;
                color: white; /* Text color for logo */
            }

                .header .logo img {
                    margin-right: 10px;
                }

        .body-content {
            background-color: #d3d3d3;
            width: 100%;
            min-height: calc(100vh - 120px); /* Adjusted to accommodate footer */
            margin: 0;
            color: black; /* Text color for body content */
            padding-bottom: 60px; /* Added padding for footer space */
        }

        .container {
            width: 100%;
            padding-left: 30px; /* Add padding to shift content to the right */
        }

        footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            background-color: #040216; /* Footer background color */
            color: white; /* Footer text color */
            padding: 10px 0;
            text-align: center;
        }
    </style>
</head>

<body>
    <div class="main-wrapper">
        <!-- Header Section -->
        <div class="header">
            <div class="header-center">
                <a href="@Url.Action("Index", "Home")" class="logo">
                    <img src="~/img/tvlogo.png" width="30" alt="TimeVista" />
                    <span>TimeVista</span>
                </a>
            </div>
            <div>
                <a href="@Url.Action("Logout", "Home")" class="btn btn-danger">Logout</a> <!-- Logout link for employees -->
            </div>
        </div>

        <!-- Sidebar Section -->
        <div class="sidebar" id="sidebar">
            <div class="sidebar-inner slimscroll">
                <div id="sidebar-menu" class="sidebar-menu">
                    <ul>
                        <li class="activee">
                            @Html.ActionLink("Dashboard", "EmployeeDashboard", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="activee">
                            @Html.ActionLink("Attendance", "Create", "tbl_attendance", new { area = "" }, new { @class = "nav-link" }) <!-- Link to Attendance -->
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Main Content Section -->
        <div class="body-content">
            <div class="container">
                <!-- Add your attendance display here -->

                <h1>Welcome, @Session["Username"]</h1>
                <p>This is where your attendance information will be displayed.</p>
                <!-- Example: Display a table of attendance records -->

            </div>
        </div>

        <!-- Footer Section -->
        <footer>
            <p>&copy; @DateTime.Now.Year - Employee Attendance Management System</p>
        </footer>
    </div>

    <!-- Scripts Section -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/jquery.slimscroll.js"></script>
    <script src="~/Scripts/Chart.bundle.js"></script>
    <script src="~/Scripts/chart.js"></script>
    <script src="~/Scripts/app.js"></script>
    <script src="~/Scripts/select2.min.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <!-- Initialize Datetime Pickers -->
    <script>
        $(function () {
            $('#datetimepicker3').datetimepicker({
                format: 'HH:mm:ss'
            });
            $('#datetimepicker4').datetimepicker({
                format: 'HH:mm:ss'
            });
            $('#datetimepicker5').datetimepicker({
                format: 'YYYY-MM-DD'
            });
            $('#datetimepicker6').datetimepicker({
                format: 'YYYY-MM-DD'
            });
        });
    </script>

</body>

</html>
