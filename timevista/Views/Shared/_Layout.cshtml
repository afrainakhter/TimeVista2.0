<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Employee Attendance Management System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/style.css" />

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/font-awesome.min.css">
    <script src="https://kit.fontawesome.com/8ee0e83968.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap-datetimepicker.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/style2.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/select2.min.css">

    <style>
        body {
            background-color: #bec6d8;
        }

        .sidebar-inner,
        .activee {
            background-color: black;
        }

            .activee:hover {
                background-color: darkolivegreen;
            }

        #MngLv {
            color: black;
        }

        .main-wrapper,
        .header {
            background-color: #040216;
        }

        .header {
            position: relative;
            z-index: 1000;
            display: flex;
            align-items: center;
            padding: 0 20px;
            justify-content: space-between;
        }

            .header .logo {
                display: flex;
                align-items: center;
                text-decoration: none;
            }

                .header .logo img {
                    margin-right: 10px;
                }

        .body-content {
            background-color: #d3d3d3;
            width: 100%;
            margin: 0;
        }

        .container {
            width: 100%;
            padding-left: 30px; /* Add padding to shift content to the right */
        }
    </style>
</head>

<body>
    <div class="main-wrapper">
        <!-- Header Section -->
        <div class="header">
            <div class="header-center">
                <a href="@Url.Action("Index", "Home")" class="logo">
                    <img src="~/img/tvlogo.png" width="30" alt="TimeVista" />
                    <span>TimeVista</span>
                </a>
            </div>
            <div>
                <a href="@Url.Action("Logout", "Home")" class="btn btn-danger">Admin Logout</a>
            </div>
        </div>

        <!-- Sidebar Section -->
        <div class="sidebar" id="sidebar">
            <div class="sidebar-inner slimscroll">
                <div id="sidebar-menu" class="sidebar-menu">
                    <ul>
                        <li class="activee">
                            @Html.ActionLink("Dashboard", "Adashboard", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="activee">
                            @Html.ActionLink("Employee", "Index", "tbl_employee", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="activee">
                            @Html.ActionLink("Departments", "Index", "tbl_department", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="activee">
                            @Html.ActionLink("Shifts", "Index", "tbl_shift", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="activee">
                            @Html.ActionLink("Locations", "Location", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="activee">
                            @Html.ActionLink("Attendance", "Index", "tbl_attendance", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="activee">
                            @Html.ActionLink("Leave Types", "Index", "tblleavetypes", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="activee">
                            <a href="#"><i class="fa fa-hammer"></i><span>Manage Leave</span></a>
                            <ul class="collapsee" id="MngLv">
                                <li>@Html.ActionLink("Pending", "PendingHistory", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                                <li>@Html.ActionLink("Approved", "PendingApprove", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                                <li>@Html.ActionLink("Declined", "DeclinedHistory", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                                <li>@Html.ActionLink("Leave History", "LeaveHistory", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Main Content Section -->
        <div class="body-content">
            <div class="container">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - Employee Attendance Management System</p>
                </footer>
            </div>
        </div>
    </div>

    <!-- Scripts Section -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/jquery.slimscroll.js"></script>
    <script src="~/Scripts/Chart.bundle.js"></script>
    <script src="~/Scripts/chart.js"></script>
    <script src="~/Scripts/app.js"></script>
    <script src="~/Scripts/select2.min.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <!-- Initialize Datetime Pickers -->
    <script>
        $(function () {
            $('#datetimepicker3').datetimepicker({
                format: 'HH:mm:ss'
            });
            $('#datetimepicker4').datetimepicker({
                format: 'HH:mm:ss'
            });
            $('#datetimepicker5').datetimepicker({
                format: 'YYYY-MM-DD'
            });
            $('#datetimepicker6').datetimepicker({
                format: 'YYYY-MM-DD'
            });
        });
    </script>

    @RenderSection("scripts", required: false)
</body>

</html>
